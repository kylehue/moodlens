{
   "manifest_version": 3,
   "name": "MoodLens",
   "version": "1.0",
   "description": "Analyze and filter webpage content based on your mood",
   "permissions": ["activeTab", "scripting", "storage"],
   "host_permissions": ["http://localhost:5000/*"],
   "action": {
      "default_popup": "popup.html"
   },
   "content_scripts": [
      {
         "matches": ["<all_urls>"],
         "js": ["content.js"],
         "run_at": "document_idle"
      }
   ]
}
